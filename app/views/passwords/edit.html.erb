<% content_for(:title, t('.title')) %>
<div class="flex justify-center text-center main_image">
  <div>
    <h1 class="text-4xl py-20"><%= t('.title') %></h1>
    <%= form_with model: @user, url: user_password_path, local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="mb-10 text-2xl">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'input input-bordered input-primary w-full' %>
      </div>
      <div class="mb-10 text-2xl">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'input input-bordered input-primary w-full' %>
      </div>
      <div class="mb-10 text-2xl">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'input input-bordered input-primary w-full' %>
      </div>
      <div class="form-group mb-10 text-2xl">
        <div><%= f.label :avatar %><%= t("defaults.optional")%></div>
        <div class="flex items-center justify-center"><%= f.file_field :avatar, class: 'form-control file-input file-input-bordered file-input-info w-full max-w-xs items-center justify-center', accept: 'image/*' %></div>
        <div><%= f.hidden_field :avatar_cache %></div>
      </div>
      <div class="d-grid mb-20">
        <%= f.submit t('defaults.register'), class: 'btn btn-primary text-white' %>
      </div>
    <% end %>
  </div>
</div>

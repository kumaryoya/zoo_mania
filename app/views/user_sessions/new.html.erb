<div class="flex justify-center text-center">
  <div class="">
    <div class="">
      <h1 class="text-3xl my-5"><%= t('.title') %></h1>
    </div>
    <%= form_with model: @user, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :email, User.human_attribute_name(:email) %>
        <%= f.email_field :email, class: 'w-full m-3 p-3' %>
      </div>
      <div class="mb-3">
        <%= f.label :password, User.human_attribute_name(:password) %>
        <%= f.password_field :password, class: 'w-full m-3 p-3' %>
      </div>
      <div class="actions">
        <%= f.submit (t 'defaults.login'), class: 'btn btn-primary text-headfoot' %>
      </div>
    <% end %>
  </div>
</div>
